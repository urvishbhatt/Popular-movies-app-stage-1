<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bordergridview"
              android:elevation="8dp"
              >


    <ImageView
            android:id="@+id/MovieImageVIewID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:background="@android:color/holo_green_dark"
            />

    <RelativeLayout
        android:id="@+id/textcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/MovieNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxEms="8"
            />


        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_002_favorite"
            android:layout_toLeftOf="@+id/MovieRatingID"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/MovieRatingID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:textStyle="bold"
             />

    </RelativeLayout>

</LinearLayout>